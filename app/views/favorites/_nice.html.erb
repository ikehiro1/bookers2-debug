<% if book.favorited_by?(current_user)%>
    <p>
        <%= link_to favorites_path(book), method: :delete, remote: true do %>
         ♡<%= book.favorites.count %>
        <% end %>
    </p>
        <% else %>
    <p>
        <%= link_to favorites_path(book), method: :post, remote: true do %>
        ♡<%= book.favorites.count %>
    </p>
   <% end %>
<% end %>
